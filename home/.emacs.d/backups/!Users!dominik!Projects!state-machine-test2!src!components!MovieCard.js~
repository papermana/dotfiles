import React from 'react';
import PropTypes from 'prop-types';
import styled from 'styled-components';

import Text from './Text';
import Rating from './Rating';
import Shade from './Shade';
import ImageLoader from './ImageLoader';
import Flex from './Flex';

const MovieCardContent = ({ className, image, title, year, rating }) => {
  return (
    <div className={className}>
      <ImageLoader src={image} />
      <Shade>
        <Text color="white" size="large">{title}</Text>
        <Flex justify="space-between">
          <Text color="white">{year}</Text>
          <Rating value={rating} />
        </Flex>
      </Shade>
    </div>
  );
};

MovieCardContent.propTypes = {
  className: PropTypes.string.isRequired,
  image: PropTypes.string.isRequired,
  title: PropTypes.string.isRequired,
  year: PropTypes.string.isRequired,
  rating: PropTypes.string.isRequired,
  id: PropTypes.number.isRequired,
};

MovieCardContent.defaultProps = {
  className: '',
};

export default styled(MovieCardContent)``;
