(defn rev-interleave-a
  [coll n]
  (loop [result (vec (map (constantly []) (range n)))
         i 0
         remaining coll]
    (if (empty? remaining)
      result
      (let [pos (mod i n)]
        (recur (update result pos #(conj % (first remaining)))
               (inc i)
               (rest remaining))))))

(rev-interleave-a [1 2 3 4 5 6] 2)




