const queryString = require('querystring');

const clientId = '280090286309.279873862803';
const clientSecret = 'e0dc85db1ffd5b12d9e9f73469d7a293';
const verificationToken = 'siFIyYiiC8S7ZkvXAkzWjy6L';

const makeUrl = (url, params) {
  if (!params) {
    return url;
  }
  
  const stringifiedParams = queryString.stringify(params);
  
  return `${url}?${stringifiedParams}`;
}

const authorize = () => {
  const params = {
    client_id: clientId,
    scope: '',
  };
  
  return fetch(makeUrl('https://slack.com/oauth/authorize', params));
}
